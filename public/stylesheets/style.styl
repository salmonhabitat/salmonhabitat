$primary = #535554
$secondary = #6E706F
$hilite = #FFE06B
$brand = #3E66A1
$structure = #eee

body
  background-image url("/images/bg/groovepaper.png")
  background-repeat repeat

.container
  position relative
  margin 0 auto
  width 960px

.content
  position relative
  left 170px
  width 620px
  padding 1em
  background white
  border-left 2px solid #f3f3f3
  border-right 2px solid #f3f3f3
  border-bottom 2px solid #f3f3f3

.post 
  img
    border 2px solid #f3f3f3
    width 100%
  ul
    margin-left 2em
    margin-bottom 1em
  li
    margin-bottom 0
    list-style-type circle

nav
  position fixed
  top 5.5rem
  width 150px
  li
    text-transform uppercase
    text-align right
    margin-bottom 0.25rem
    a
      color $secondary

.attention
  background $structure

.padder
  padding 0 0.5em

.inline
  display inline-block
  vertical-align top
  margin 0.5%

.person
  width 32%
  text-align center
  margin-bottom 1em
  img
    width 100%
    -webkit-filter grayscale(100%)  
    &:hover
      -webkit-filter grayscale(0%)
  h3
    font-size 1.4rem
    margin 0

.member
  width 24%
  text-align center
  p, h3
    margin-bottom 0
  h3
    font-size 1.2rem
  p
    font-size 0.8rem
  -webkit-transition: background 0.5s ease;
  -moz-transition: background 0.5s ease;
  -ms-transition: background 0.5s ease;
  -o-transition: background 0.5s ease;
  transition: background 0.5s ease;

.event
  p
    margin-bottom 0.5em
  .date h3
    float left
  .details
    float left
    margin-left 1em
    margin-bottom 1em
    width 50%

p
  &.clear
    clear both
  a
    color $brand
    font-weight bold
