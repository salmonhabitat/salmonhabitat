$primary = #535554
$secondary = #6E706F
$hilite = #FFE06B
$brand = #3E66A1
$structure = #eee

.container
  position relative
  margin 0 auto
  width 960px

.content
  position relative
  left 170px
  width 620px

nav
  position fixed
  top 4.6rem
  width 150px
  li
    text-transform uppercase
    text-align right
    margin-bottom 0.25rem
    a
      color $secondary

.attention
  background $structure

.inline
  display inline-block
  vertical-align top
  margin 0.5%

.person
  width 32%
  text-align center
  img
    width 100%
  h3
    font-size 1.4rem
    margin 0

.member
  width 24%
  text-align center
  p, h3
    margin-bottom 0
  h3
    font-size 1.2rem
  p
    font-size 0.8rem
  -webkit-transition: background 0.5s ease;
  -moz-transition: background 0.5s ease;
  -ms-transition: background 0.5s ease;
  -o-transition: background 0.5s ease;
  transition: background 0.5s ease;

   
