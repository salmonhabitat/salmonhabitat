@import 'nib'
@import colors
@import normalize
@import base
@import css3-gmail-style


.container
  width 80%

header
  width 100%
  border-bottom 5px solid #eee
  position relative
  nav
    position relative
    top 60px
    li
      text-transform uppercase
      font-weight bold
      display inline
      margin-right 0.5em
      a
        padding 5px 10px
        border-radius 5px
        transition background 1s ease
        &:hover
          background rgba(0,0,0,0.2)
          transition background 1s ease

.content
  margin-bottom 10em
  ul
    margin-left 2em
    margin-bottom 0
  a
    font-weight bold
  img
    width 100%

.footer
  clear both
  background #eee
  border-top 2px solid #eee
  ul
    display inline-block
    width 33%
    text-align center
    li
      display inline
      margin-right 5px
      a
        font-weight bold
        text-transform uppercase
    &.social
      li
        display inline
        margin-left 5px

.about 
  img
    float right
    width 200px
    margin-left 1em

// Utility classes

.attention
  background $structure

.pad
  padding 0.5em

.capitalize
  text-transform uppercase

.us
  .person
    display inline-block
    width 30%
    margin 0 1.3%
    vertical-align bottom
    p
      text-align center
      text-transform uppercase
      font-weight bold
    img
      width 100%

.board
  li
    margin 0.5em 0
    h3, p
      margin 0
    h3
      font-size 1.2em
    p

ul.posts li
  text-transform uppercase

.version
  text-transform uppercase
  font-size 0.8rem
  color red
  vertical-align bottom
  float right

.left, .right
  padding 0 1%

.left
  width 60%
  float left

.right
  width 36%
  float right

// Site Specific

.sidebar
  h1
    font-size 1.2rem
    color $secondary
    margin 2em 0 0 0 
  p, li, ul
    margin 0
  input
    font-size 0.9rem
