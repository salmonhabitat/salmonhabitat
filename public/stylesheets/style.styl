// ===== COLORS =====

// Standard colors
$primary = #535554
$secondary = #7C838B

// O yeaaa...
$hilite = #FFE06B
$brand = #3E66A1
$structure = #e2e2e2

// ===== TYPOGRAPHY =====

h1, h2, h3 
  font-family "franklin-gothic-urw-con-sc", sans-serif
  color $primary

li, p
  font-family "franklin-gothic-urw-cond", sans-serif
  color $secondary

a
  color $primary
  text-decoration none
  &:hover
    color $brand

p, li
  font-size 0.9rem

h2
  border-bottom 2px solid $structure

nav
  li
    font-weight bold
    font-size 1.2rem
    margin 0.25em 0

iframe
  width 100%
  height 300px

// ===== STRUCTURE =====

body
  margin 0
  padding 0

div.container
  padding 1em
  margin 0 auto

div.person
  display inline-block
  vertical-align top
  width 23%
  margin 0 1%
  text-align center
  img
    width 100%
  p
    color $primary
    font-size 0.9rem
  p.name
    font-weight bold

nav.page
  li
    list-style-type circle
    a
      color $brand

ul.projects
  li
    font-weight bold
    font-size 1.1rem
    background $structure
    margin 0.25em 0
    padding 0.54em
    &:hover
      background #f6f6f6

// ===== MOBILE =====

@media screen and (max-width: 480px)
  div.container
    width 100%

  div.header
    width inherit
    text-align center
    nav
      li
        background $structure

  div.content
    width inherit
    text-align center
    img.main
      display none

  nav.social
    display none

// ===== DESKTOP =====

@media screen and (min-width: 481px)
  div.container
    width 960px

  div.header
    position relative
    float left
    top 5em
    width 38%
    nav.social
      margin-top 2em
      li
        margin 0 4px 0 0
        float left

  div.content
    position relative
    float left
    top 5em
    width 62%
    p, li
      font-size 1.1rem
  
