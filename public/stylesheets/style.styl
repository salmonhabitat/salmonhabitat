@import 'nib'
@import colors
@import normalize
@import base
@import css3-gmail-style

body
  border 10px solid #eee

.container
  width 80%
  margin 0 auto
  margin-top 5em

header
  h1
    font-size 3rem
    margin 0

.nav
  position relative
  left -10px
  top 2em
  li
    text-transform uppercase
    font-weight bold
    display inline
    margin-right 0.5em
    a
      padding 5px 10px
      border-radius 5px
      transition background 1s ease
      &:hover
        background rgba(0,0,0,0.2)
        transition background 1s ease

.content
  margin-bottom 10em
  ul
    margin-left 2em
    margin-bottom 0
  a
    font-weight bold
  img
    width 100%

.footer
  clear both
  border-top 2px solid #eee

.about 
  img
    float right
    width 200px
    margin-left 1em

// Utility classes

.attention
  background $structure

.pad
  padding 0.5em

.capitalize
  text-transform uppercase

.us
  .person
    display inline-block
    width 30%
    margin 0 1.3%
    vertical-align bottom
    p
      text-align center
      text-transform uppercase
      font-weight bold
    img
      width 100%

.board
  li
    margin 0.5em 0
    h3, p
      margin 0
    h3
      font-size 1.2em
    p

ul.posts li
  text-transform uppercase

.left
  width 64%
  float left

.right
  width 31%
  float right

// Site Specific

.sidebar
  h1
    font-size 1.2rem
    color $secondary
    margin 2em 0 0 0 
  p, li, ul
    margin 0
  input
    font-size 0.9rem
