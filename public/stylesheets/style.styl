@import 'nib'
@import colors
@import normalize
@import base

.container
  padding 1em

.content
  ul
    margin-left 2em
  
    list-style-type circle
    margin-bottom 0
  p a, li a
    font-weight bold
  img
    width 100%

.sidebar
  p.button a
    background green
    padding 5px 10px

.about 
  img
    float right
    width 200px
    margin-left 1em

header
  width 100%
  background #444
  background url("/images/bg-blur.jpg")
  background-size 100%
  height 10em
  border-bottom 5px solid #eee
  position relative
  img.title
    padding 1em
    height 120px
  nav
    position relative
    top 4em
    li
      text-transform uppercase
      font-weight bold
      display inline
      margin-right 0.5em
      a
        padding 5px 10px
        color white
        border-radius 5px
        transition background 1s ease
        &:hover
          background rgba(0,0,0,0.2)
          transition background 1s ease

// REUSABLE CLASSES

.attention
  background $structure

.pad
  padding 0.5em

.us
  .person
    display inline-block
    width 30%
    margin 0 1.3%
    vertical-align bottom
    p
      text-align center
      text-transform uppercase
      font-weight bold
    img
      width 100%

.board
  li
    margin 0.5em 0
    h3, p
      margin 0
    h3
      font-size 1.2em
    p

.footer
  clear both
  background #eee
  border-top 2px solid #eee
  ul
    display inline-block
    width 33%
    text-align center
    li
      display inline
      margin-right 5px
      a
        font-weight bold
        text-transform uppercase
    &.social
      li
        display inline
        margin-left 5px

ul.posts li
  text-transform uppercase

.version
  text-transform uppercase
  font-size 0.8rem
  color red
  vertical-align bottom
  float right

.left, .right
  padding 0 1%

.left
  width 60%
  float left

.right
  width 36%
  float right
